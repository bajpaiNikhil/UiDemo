<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RadioButtonActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:layout_marginTop="68dp"
        android:text="Radio BUtton Demo"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cityT"
        android:layout_width="170dp"
        android:layout_height="28dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="135dp"
        android:text="Select a City"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <RadioGroup
        android:id="@+id/cityRG"
        android:layout_width="377dp"
        android:layout_height="192dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:checkedButton="@id/mumR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cityT"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/blrR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:onClick="rbClicked"
            android:text="Bangalore" />

        <RadioButton
            android:id="@+id/dlhR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:onClick="rbClicked"
            android:text="Delhi" />

        <RadioButton
            android:id="@+id/mumR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="rbClicked"
            android:text="MumBai" />

        <RadioButton
            android:id="@+id/hydR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="rbClicked"
            android:text="Hyderabad" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>